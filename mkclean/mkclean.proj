#include "*/*.proj"

GROUP mkclean_base
{
  PROJECT_NAME "mkclean"
  PROJECT_VERSION  0.8.10
  PROJECT_VENDOR   "Matroska"
  USE matroska2
  SOURCE mkclean.c
  COMPILE src.br
  COMPILE configure
  COMPILE pkg.sh
}

CON(CONFIG_EBML_WRITING) mkclean
{
   USE mkclean_base
}

CON(CONFIG_EBML_WRITING) mkWDclean
{
   USE mkclean_base
}


WORKSPACE mkclean
{
  USE mkclean
  USE mkWDclean
  USE mkcleanreg
}

